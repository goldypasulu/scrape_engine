# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Concurrency Settings
# Number of browser instances running in parallel
MAX_CONCURRENCY=2
# Number of BullMQ workers processing jobs
MAX_WORKERS=3

# Scroll Behavior (milliseconds)
SCROLL_DELAY_MIN=800
SCROLL_DELAY_MAX=2000
SCROLL_INCREMENT_MIN=300
SCROLL_INCREMENT_MAX=700

# Timeouts (milliseconds)
PAGE_TIMEOUT=60000
NAVIGATION_TIMEOUT=30000

# Rate Limiting
# Maximum jobs per minute
RATE_LIMIT_MAX=10
RATE_LIMIT_DURATION=60000

# Scraper Settings
MAX_SCROLLS=50
MAX_PAGES_PER_JOB=5

# Logging
LOG_LEVEL=info
# Set to 'true' for pretty logs in development
LOG_PRETTY=true

# Browser Settings
HEADLESS=true
